<Window x:Class="ProfRabot.View.Windows.GlavOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfRabot.View.Windows"
        mc:Ignorable="d"
        Title="GlavOkno" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Resource/222.jpg"/>
    </Window.Background>
    
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="Jour_Click" Height="80" Margin="10 0 10 0" x:Name="Jour" Content="Добавить вагон и этаж"/>
            <Button Click="RabSta_Click" Height="80" Margin="10 0 10 0" x:Name="RabSta" Content="Добавить имя работы и его статус"/>
            <Button Click="Uchet_Click" Height="80" Margin="10 0 10 0" x:Name="Uchet" Content="Посмотреть учет"/>
        </StackPanel>
    </Grid>
</Window>
